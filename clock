#!/bin/sh
# clock -- big clock on a text screen.
# Author: Luis Colorado <luiscoloradourcola@gmail.com>
# Date: Sun Mar 25 12:46:44 EEST 2018

DATE=/bin/date
ECHO=/bin/echo
SLEEP=/bin/sleep
WC=/usr/bin/wc
BANNER=`which banner`

case "$1" in
	-*) BANNEROPTS="$1"; shift;;
esac

case "$1" in
	complete|full)
		DELAY=0.1; FORMAT="w%W-j%j%n%x %a%n%X %Z";;
	time*)
		DELAY=0.1; FORMAT="%X";;
	short*)
		DELAY=2; FORMAT="%H:%M";;
	""|timez*)
		DELAY=0.2; FORMAT="%X %Z";;
	epoch|unix)
		DELAY=0.2; FORMAT="%s";;
	date*)
		DELAY=0.2; FORMAT="%x %a%n%X %Z";;
	*)
		DELAY=1; FORMAT="$1";;
esac

g="[32m"
c="[36m"
eol="[K"
r="[m"

echo TYPE="$TYPE", DELAY="$DELAY", FORMAT="$FORMAT", BANNEROPTS="$BANNEROPTS" >&2

OD=""
while true
do
	D="$(${DATE} "+${FORMAT:-${TYPE}}")"
	if [ "$D" != "$OD" ]
	then
		[ -z "$OD" ] || ${ECHO} -n "[${L}A"
		O="$(${ECHO} "$D" | "${BANNER}" ${BANNEROPTS:--f} | sed '
									1s/^/'"${g}"'/
									s/#\(.*#\)*/'"${c}&${g}"'/
									s/#/0/g
									$s/$/'"${r}"'/
									s/.*/'"&${eol}"'/
									')"
		L="$(${ECHO} "$O" | ${WC} -l | sed 's/[ 	]*//')"
		${ECHO} "$O"
	else
		${SLEEP} "${DELAY:-1}"
	fi
	OD=$D
done
